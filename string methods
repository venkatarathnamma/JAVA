import java.util.Scanner;
public class string{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the string: ");
        String s=sc.nextLine();
        System.out.println("length of string:"+s.length());
        System.out.println("conversion:" +s.toUpperCase());
        System.out.println("removing spaces:" +s.trim());
        System.out.println("chracter of string " +s.charAt(3));
        System.out.println("splitting : "+ s.split(""));
        System.out.println("substring: " +s.substring(4));
        System.out.println("replace :" +s.replace("sa","ka"));
        System.out.println("contains: " +s.contains("good"));
    }
}
